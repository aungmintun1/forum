doctype html
html
  head
    block head
      meta(charset='UTF-8')
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
      link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
      link(rel='stylesheet' href='/css/header.css')
      link(rel='stylesheet' href='/css/base.css')
      link(href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css' rel='stylesheet')
      title Thread
  
  body
   header.header
    nav
     ul
      li
        a(href="#home") profile
      li
        a(href='/') home
      li
        a(href="/login") login
   
   h1.base-header Threads 
 

   section.threads
    .thread-container
     each thread in threads 
      a.thread-link(href=`/thread/${thread.id}`)
       .thread-box
        .thread-likes
         i.fa-regular.fa-thumbs-up.like-icon
         div= thread.totalLikes
        .thread-content  
         p.thread-username Posted by: #{thread.username}
         h2.question= thread.question
         .comment-number-container 
          i.fa-regular.fa-message
          p #{thread.totalComments} comments
    
    .create-box
     h2 Computer Science Club 
     p Created at 2/22/24
     p 32 users 
     textarea#question.comment-input(name='comment' placeholder='Write your question here...')
     textarea#description.comment-input(name='comment' placeholder='Write your description here...')
     button.create-post-btn.reply-icon create post
  
   
   script(src='/js/bundle.js')
   script(src='/js/replyButton.js')     

